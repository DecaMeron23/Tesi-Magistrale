#ifndef _SRV_PWM_H
#define _SRV_PWM_H

#include "main.h"

/**
 * Inizzializzazione del servizio PWM
 */
void SRV_PWM_Init();

/**
 * Lettura della frequenza in Hz
 *
 * @param pData 	[out] Dove verranno salvati i valori, 8 Byte
 */
void SRV_PWM_GetFrequency(uint8_t *pData);

/**
 * Start o Stop delle notifiche relative alla frequenza
 *
 * @param state		Se pari a zero allora si esegue lo start nella notifica, altrimenti si ferma.
 */
void SRV_PWM_NotifyFrequency(uint8_t state);

/**
 * Lettura del duty cylce in percentuale
 *
 * @param pData		[out] Dove verranno salvati i valori, 1 Byte
 */
void SRV_PWM_GetDutyCycle(uint8_t *pData);

#endif /* _SRV_PWM_H */
