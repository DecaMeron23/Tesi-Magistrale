#ifndef _SRV_PWM_H
#define _SRV_PWM_H

#include "main.h"

/**
 * Inizzializzazione del servizio PWM
 */
void SRV_PWM_Init();

/**
 * Lettura della frequenza in Hz
 *
 * @param[out] uint8_t *pData Dove verranno salvati i valori, 8 Byte
 */
void SRV_PWM_GetFrequency(uint8_t *pData);

/**
 * Lettura del duty cylce in percentuale
 *
 * @param[out] uint8_t *pData Dove verranno salvati i valori, 8 Byte
 */
void SRV_PWM_GetDutyCycle(uint8_t *pData);

#endif /* _SRV_PWM_H */
