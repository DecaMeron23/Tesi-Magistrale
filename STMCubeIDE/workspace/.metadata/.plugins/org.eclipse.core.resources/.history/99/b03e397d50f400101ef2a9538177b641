#ifndef _MX25L4006E_MX25L4006E_H
#define _MX25L4006E_MX25L4006E_H

#include "main.h"
#include "stdbool.h"

#define MX25L4006E_hspi 		hspi1 						/**< Definizione dell'handler per la SPI, da modificare in base all'utilizzo*/
#define MX25L4006E_HOLD_Pin 	FLASH_HOLD_Pin				/**< Definizione del pin HOLD per la memoria, da modificare in base all'utilizzo*/
#define MX25L4006E_HOLD_Port 	FLASH_HOLD_GPIO_Port		/**< Definizione della porta HOLD per la memoria, da modificare in base all'utilizzo*/
#define MX25L4006E_CS_Pin 		CS_FLASH_Pin				/**< Definizione del pin Chip Select per la SPI, da modificare in base all'utilizzo*/
#define MX25L4006E_CS_Port 		CS_FLASH_GPIO_Port			/**< Definizione della porta Chip Select per la SPI, da modificare in base all'utilizzo*/

#define MX25L4006E_ID			0xC22013					/**< Valore del ID identificativo: C2 (Manufacturer), 20 (tipo di memoria) e 13 (ID device)*/

/**
 * Inizializzazione della Memoria
 */
bool MX25L4006E_Init(void);

/**
 * Lettura dell'ID del dispositivo.
 *
 * @param aID [out] Array di lunghezza 3-Byte
 */
bool MX25L4006E_ReadID(uint8_t* aID);

bool MX25L4006E_ReadData(void);

bool MX25L4006E_WriteData(void);

#endif /* _MX25L4006E_MX25L4006E_H */
