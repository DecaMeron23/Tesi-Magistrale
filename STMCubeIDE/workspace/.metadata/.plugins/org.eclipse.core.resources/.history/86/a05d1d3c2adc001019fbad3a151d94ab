#ifndef PWMSIGNAL_H_
#define PWMSIGNAL_H_

#include "main.h"

typedef struct
{
	uint32_t prec;
	uint32_t cycle_time;
	uint32_t up_time;
} PWMSignal;

void initializePWMSignal(const uint32_t freq_clk, const uint32_t pre_scaler);
void computeFrequency(PWMSignal *s, TIM_HandleTypeDef *htim, uint8_t is_rising);

uint32_t getFrequency(PWMSignal *s);
uint32_t getDutyCycle(PWMSignal *s);

#endif /* PWMSIGNAL_H_ */
